          varTitle = chekboxe.getAttribute('data-v-val');
        }else{
          varTitle += ` / ${chekboxe.getAttribute('data-v-val')}`
        }
      })
      
 var handle = e.target.getAttribute('href');
     
  var query = `${handle}.json`;
    fetch(query)
  .then((response) => response.json())
  .then((data) => {
    data.product.variants.forEach((variant)=>{
     
      if(variant.title == varTitle ){
        console.log('varienmatched')
        console.log(variant.id)
        var id = variant.id
        var quantity = 1
        addItemsToCart(id,quantity)
      }
    })
    console.log(data)
  });
