<div class="centered small--one-whole three-quarters store-locator-main-wrap {% if template.name != "index" %}inner-page-store-locator{% endif %}">

  {% if section.settings.image != blank %}
    <div class="store-locator-bg">
  <div class="store-locator-img">
    <img src="{{  section.settings.image | img_url: '659x850' }}" />
  </div>
    </div>
   {% endif %}
   <div class="store-locator-form">
     <div class="find-near-wrapper">
      <span class="find">find A store</span>
      <span class="near-you">Near You</span>
    </div>
    {% if section.settings.store_locator_title != blank %}
    <h3>{{ section.settings.store_locator_title }}</h3>
    {% endif %}
    <a href="https://thermo-skin.myshopify.com/pages/store-locator-1" class="btn btn-secandory" value="">Lets Go</a>
  </div>
</div>

{% schema %}
  {
    "name": "Store locator",
    "settings": [
      {
        "id": "store_locator_title",
        "type": "text",
        "label": "Stote Locator heading",
        "default": "Store locator"
      },
      	{
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
    ],
       "presets": [
        {
            "name": {
                "en": "Store Locator",
                "de": "Bild mit Text",
                "es": "Imagen con texto",
                "fr": "Image avec texte",
                "pt-PT": "Imagem com texto"
            }
        }
    ]
  }
{% endschema %}
